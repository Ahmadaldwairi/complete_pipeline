# Execution Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=trading_bot

# Solana RPC Endpoints
RPC_ENDPOINT=https://api.mainnet-beta.solana.com
GRPC_ENDPOINT=grpc://your-grpc-endpoint:10000

# Wallet Configuration (SENSITIVE - NEVER COMMIT!)
PRIVATE_KEY=your_base58_or_json_array_private_key_here

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Trading Configuration
JITO_TIP_AMOUNT=100000000
POSITION_SIZE_USD=5.0
MAX_CONCURRENT_POSITIONS=5

# Exit Strategy
EXIT_TIER1_PROFIT=0.50
EXIT_TIER2_PROFIT=1.00
EXIT_TIER3_VOLUME_THRESHOLD=3.0
EXIT_STOP_LOSS=-0.30
EXIT_MAX_TIME=60
EXIT_TIER3_MAX_TIME=120

# Mempool Configuration
MEMPOOL_MAX_DETECTION_MS=100.0
PRICE_CHECK_INTERVAL=5

# Advice Bus (External Intelligence Integration)
ADVICE_BUS_ENABLED=false
ADVICE_BUS_PORT=45100
ADVICE_MIN_CONFIDENCE=60
ADVICE_MAX_HOLD_EXTENSION_SECS=30

# Note: Never commit your actual .env file!
# This is just a template showing what variables are needed.
